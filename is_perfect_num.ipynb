   "source": [
    "n = int(input('Enter a positive number: '))\n",
    "def is_perfect(n):\n",
    "    sum = 0;\n",
    "    for i in range(1, n):\n",
    "        if n % i == 0:\n",
    "            sum += i\n",
    "    return sum == n\n",
    "if is_perfect:\n",
    "    print('{} is a perfect number.'.format(n))\n",
    "else:\n",
    "    print('{} is not a perfect number.'.format(n))"
   ]
